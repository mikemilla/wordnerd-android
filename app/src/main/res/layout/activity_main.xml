<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="80dp">

            <com.mikemilla.wordnerd.views.EightBitNominalTextView
                android:id="@+id/title_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/white"
                android:textSize="52sp" />

            <com.mikemilla.wordnerd.views.EightBitNominalTextView
                android:id="@+id/title_nerd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/white"
                android:textSize="52sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="80dp">

            <ImageButton
                android:id="@+id/start_game"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_above="@+id/button_container"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_exit_game"
                android:scaleType="centerInside"
                android:src="@drawable/icon_play" />

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <com.mikemilla.wordnerd.views.EightBitNominalTextView
                    android:id="@+id/rate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_exit_game"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="@string/rate"
                    android:textColor="@color/white54"
                    android:textSize="16sp" />

                <com.mikemilla.wordnerd.views.EightBitNominalTextView
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_exit_game"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="@string/menu"
                    android:textColor="@color/white54"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <com.mikemilla.wordnerd.views.AvenirTextView
        android:id="@+id/copyright_text_view"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white26" />

    <FrameLayout
        android:id="@+id/google_play_games_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
