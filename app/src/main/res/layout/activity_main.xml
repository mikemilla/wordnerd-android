<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_main_menu"
        android:scaleType="centerInside"
        android:src="@drawable/menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.mikemilla.wordnerd.views.EightBitNominalTextView
            android:id="@+id/title_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/white"
            android:textSize="52sp" />

        <com.mikemilla.wordnerd.views.EightBitNominalTextView
            android:id="@+id/title_nerd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/white"
            android:textSize="52sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/start_game"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_exit_game"
        android:scaleType="centerInside"
        android:src="@drawable/icon_play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="C Michael Miller 2016"
        android:textColor="@color/white26" />

    <FrameLayout
        android:id="@+id/google_play_games_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
