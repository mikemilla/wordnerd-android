<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mother"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#45bfe8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mikemilla.wordnerd.MyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="fill"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rhyme_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-35dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:textAllCaps="true"
                android:textColor="#171717"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:checked="true"
                android:gravity="center_vertical"
                android:onClick="onToggleClicked"
                android:padding="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rhyme_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nonactive_button"
                    android:padding="15dp"
                    android:text="dope"
                    android:textAllCaps="true"
                    android:textColor="#171717"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!--

                <TextView
                    android:id="@+id/amount_needed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-80dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/word_point"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#171717"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="1"/>

                    -->

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-65dp"
            android:background="#ffffff"
            android:gravity="center">

            <EditText
                android:id="@+id/submit_rhyme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionSend"
                android:inputType="textCapCharacters"
                android:padding="15dp"
                android:textAllCaps="true"
                android:textColor="#171717"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>