<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mother"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#f2f2f2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mikemilla.wordnerd.MyActivity">

    <!-- Main -->

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/play_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:background="@drawable/play_games" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--<TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="word"
                android:textSize="42sp" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/glasses"
                android:contentDescription="@string/abc_action_mode_done" />

            <TextView
                android:id="@+id/nerd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="wordnerd"
                android:textColor="#ffffff"
                android:textSize="42sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tap"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:gravity="center"
                android:text="tap to play"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Game -->

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/rhyme_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-35dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_bar"
                android:visibility="gone" />

            <TextView
                android:id="@+id/current_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:alpha="0.5"/>

            <ToggleButton
                android:visibility="gone"
                android:id="@+id/sound"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:background="@drawable/sound_toggle"
                android:checked="true"
                android:gravity="center_vertical"
                android:onClick="onToggleClicked"
                android:padding="25dp" />

                <TextView
                    android:id="@+id/rhyme_with"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-25dp"
                    android:text="dope"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rhyme_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-74dp"
            android:background="#ffffff"
            android:gravity="center">

            <EditText
                android:id="@+id/submit_rhyme"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:background="@drawable/dots_animation"
                android:gravity="center"
                android:imeOptions="actionSend"
                android:inputType="textAutoCorrect"
                android:padding="12dp"
                android:textSize="42sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Score -->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:background="@drawable/score_card_stroke"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_over"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="GAME OVER"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#BFBFBF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/syllables_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Syllables"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/final_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="end"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="19"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/score_card_dash"
                android:layerType="software"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/best_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Best"
                    android:textSize="20sp"
                    android:alpha=".5"/>

                <TextView
                    android:id="@+id/best_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="end"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textSize="20sp"
                    android:alpha=".5"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="-89dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="games"/>

            <Button
                android:id="@+id/main_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="menu"/>

        </LinearLayout>

        <Button
            android:id="@+id/restart_game"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="-65dp"
            android:background="@drawable/restart_button"
            android:text="play again">

        </Button>

    </LinearLayout>

</LinearLayout>

