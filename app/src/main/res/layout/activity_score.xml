<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#425f69"
    tools:context=".MainActivity"
    android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/list_item_backer"
                android:visibility="gone">

                <Button
                    android:id="@+id/send_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:text="Hey Mike!"
                    android:textSize="20sp"
                    android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical" >

                    <TextView
                        android:id="@+id/final_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="40dp"
                        android:paddingBottom="30dp"
                        android:gravity="center"
                        android:textSize="120sp"
                        android:text="100"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/best_text"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:text="BEST"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#263f47"
                            android:paddingRight="8dp"
                            android:layout_marginTop="-8dp"
                            android:paddingBottom="15dp"
                            android:gravity="right"/>

                        <TextView
                            android:id="@+id/best_score"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:text="555"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:paddingLeft="8dp"
                            android:textColor="#ffffff"
                            android:paddingBottom="15dp"
                            android:gravity="left"
                            android:layout_marginBottom="15dp"/>

                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/button_backer">

                <Button
                    android:id="@+id/restart_game"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:text="Restart"
                    android:textSize="20sp"
                    android:background="@drawable/score_button"/>

                <Button
                    android:id="@+id/main_menu"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:text="Menu"
                    android:textSize="20sp"
                    android:background="@drawable/score_button"/>

            </LinearLayout>

            <!--

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="40dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/last_rhyme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="36sp"
                    android:text="Food" />

            </LinearLayout>

            -->

        </LinearLayout>

</LinearLayout>