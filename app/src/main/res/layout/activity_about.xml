<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark">

    <com.mikemilla.wordnerd.views.EightBitNominalTextView
        android:id="@+id/contact_me_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/web_button"
        android:layout_below="@+id/close_button"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.4"
        android:padding="32dp"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <com.mikemilla.wordnerd.views.EightBitNominalTextView
        android:id="@+id/sign_out_google_play"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/tweet_button"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_exit_game"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/sign_out"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.mikemilla.wordnerd.views.EightBitNominalTextView
        android:id="@+id/tweet_button"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@+id/web_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_exit_game"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:padding="24dp"
        android:text="@string/tweet"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.mikemilla.wordnerd.views.EightBitNominalTextView
        android:id="@+id/web_button"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_exit_game"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:padding="24dp"
        android:text="@string/created_by"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_exit_game"
        android:scaleType="centerInside"
        android:src="@drawable/close" />

</RelativeLayout>
